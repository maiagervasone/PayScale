<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dcf4e4"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="73dp"
        tools:layout_editor_absoluteY="104dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:layout_gravity="center"
            android:layout_marginTop="-130dp"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/withslogan" />

        <Button
            android:id="@+id/compareOffersButton"
            android:layout_width="300dp"
            android:layout_height="73dp"
            android:layout_gravity="center"
            android:background="#94ccbc"
            android:text="compare offers"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="#737373"
            android:textSize="26dp"
            android:layout_marginTop="-100dp"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/myoffers"
            android:layout_width="300dp"
            android:layout_height="73dp"
            android:layout_gravity="center"
            android:background="#94ccbc"
            android:text="my offers"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="#737373"
            android:textSize="26dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/howitworks"
            android:layout_width="300dp"
            android:layout_height="73dp"
            android:layout_gravity="center"
            android:background="#94ccbc"
            android:text="how it works"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="#737373"
            android:textSize="26dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"/>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>